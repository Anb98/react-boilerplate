{
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"@root/*"      : ["*"],
			"@components/*": ["components/*"],
			"@config/*"    : ["config/*"],
			"@helpers/*"   : ["helpers/*"],
			"@hooks/*"     : ["hooks/*"],
			"@layout/*"    : ["layout/*"],
			"@pages/*"     : ["pages/*"]
		}
	},
	"exclude": ["node_modules", "build"]
}